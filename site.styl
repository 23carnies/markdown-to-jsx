color-accent = #77667D
color-body = #444

*,
*::before,
*::after {
    box-sizing: border-box;
    outline-color: color-accent;
}

html,
body,
#--root,
main {
    margin: 0;
    overflow: hidden;
    height: 100%;
}

html {
    color: color-body;
    font-family: 'Source Sans Pro', Helvetica Neue, Helvetica, sans-serif;
    font-size: 14px;
    line-height: 1.5;
}

h1,
h2,
h3,
h4,
h5,
h6 {
    margin: 0 0 1em;
}

h1 {
    font-size: 2rem;
}

h2 {
    font-size: 1.8rem;
}

h3 {
    font-size: 1.6rem;
}

h4 {
    font-size: 1.4rem;
}

h5 {
    font-size 1.2rem;
}

h6 {
    font-size: 1rem;
}

a {
    color: color-accent;
    transition: color 200ms ease;

    &:hover,
    &:focus {
        color: darken(color-accent, 50%);
    }
}

code {
    background: rgba(color-accent, 0.2);
    border: 1px solid rgba(color-accent, 0.3);
    border-radius: 2px;
    display: inline-block;
    padding: 0 2px;
}

pre code {
    background: transparent;
    border: 0;
    display: block;
    padding: 1em;
}

main {
    display: flex;
    flex-direction: column;
    padding: 3em;
}

header {
    flex-shrink: 0;
    margin-bottom: 2em;
    text-align: center;

    img {
        height: 100px;
    }
}

.content {
    display: flex;
    flex-grow: 1;
}

.content-compiled,
.content-raw {
    flex: 0 0 50%;
    padding: 1em;
}

.content-compiled {
    overflow: auto;
    overflow-x: hidden;
    margin-left: 1em;
}

.content-raw {
    border-color: color-accent;
    border-radius: 2px;
    font-family: 'Source Code Pro', Consolas, Monaco, monospace;
    font-size: inherit;
    margin-right: 1em;
}

.description {
    font-size: 18px;
}

.learn-more {
    color: lighten(color-body, 30%);
}
